{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "Posted": {
      "type": "date",
      "required": true
    },
    "BlogPostImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "SecondaryTitle": {
      "type": "string"
    },
    "PreviewContent": {
      "type": "richtext",
      "maxLength": 135
    },
    "slug": {
      "type": "string",
      "required": true
    }
  }
}
